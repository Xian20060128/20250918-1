<Window x:Class="_20250918_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250918_1"
        mc:Ignorable="d"
        Title="飲料點餐系統ver2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="82*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="452*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="DrinkMenu_StackPanel" Margin="0,80,4,130" Background="#FFFFE8E8" Grid.ColumnSpan="2" Grid.RowSpan="2" HorizontalAlignment="Right" Width="522">
            <StackPanel x:Name="DrinkMenu_StackPanel4" Height="34" Background="#FF9DDACB" Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Content="綠茶大杯" FontSize="14" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FFBB4848" Height="12" VerticalAlignment="Bottom" />

                <Label Content="50元" FontSize="14" VerticalAlignment="Center" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FF814EA5"/>
                <Slider x:Name="slider" Width="250" VerticalAlignment="Center" MinHeight="0" Margin="20,0,0,0" Minimum="0" Maximum="20"  IsSnapToTickEnabled="True"/>
                <Label x:Name="label2" Content="{Binding Value, ElementName=slider}" VerticalAlignment="Center" Margin="20,0,0,0" IsTabStop="True" />
            </StackPanel>
            <StackPanel x:Name="DrinkMenu_StackPanel3" Height="34" Background="#FF9DDACB" Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Content="紅茶大杯" FontSize="14" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FFBB4848" Height="12" VerticalAlignment="Bottom" />

                <Label Content="55元" FontSize="14" VerticalAlignment="Center" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FF814EA5"/>
                <Slider x:Name="slider1" Width="250" VerticalAlignment="Center" MinHeight="0" Margin="20,0,0,0" Minimum="0" Maximum="20"  IsSnapToTickEnabled="True"/>
                <Label x:Name="label1" Content="{Binding Value, ElementName=slider1}" VerticalAlignment="Center" Margin="20,0,0,0" IsTabStop="True" />
            </StackPanel>
            <StackPanel x:Name="DrinkMenu_StackPanel2" Height="34" Background="#FF9DDACB" Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Content="清茶大杯" FontSize="14" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FFBB4848" Height="12" VerticalAlignment="Bottom" />

                <Label Content="45元" FontSize="14" VerticalAlignment="Center" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FF814EA5"/>
                <Slider x:Name="slider3" Width="250" VerticalAlignment="Center" MinHeight="0" Margin="20,0,0,0" Minimum="0" Maximum="20"  IsSnapToTickEnabled="True"/>
                <Label x:Name="label3" Content="{Binding Value, ElementName=slider3}" VerticalAlignment="Center" Margin="20,0,0,0" IsTabStop="True" />
            </StackPanel>
            <StackPanel x:Name="DrinkMenu_StackPanel1" Height="34" Background="#FF9DDACB" Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Content="綠茶小杯" FontSize="14" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FFBB4848" Height="12" VerticalAlignment="Bottom" />

                <Label Content="30元" FontSize="14" VerticalAlignment="Center" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FF814EA5"/>
                <Slider x:Name="slider4" Width="250" VerticalAlignment="Center" MinHeight="0" Margin="20,0,0,0" Minimum="0" Maximum="20"  IsSnapToTickEnabled="True"/>
                <Label x:Name="label4" Content="{Binding Value, ElementName=slider4}" VerticalAlignment="Center" Margin="20,0,0,0" IsTabStop="True" />
            </StackPanel>
            <StackPanel x:Name="DrinkMenu_StackPanel5" Height="34" Background="#FF9DDACB" Orientation="Horizontal">
                <CheckBox Content="紅茶小杯" FontSize="14" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FFBB4848" Height="12" VerticalAlignment="Bottom" />

                <Label Content="35元" FontSize="14" VerticalAlignment="Center" 
                    Margin="20,0,0,0" MinHeight="26" FontWeight="Bold" BorderBrush="Black" Foreground="#FF814EA5"/>
                <Slider x:Name="slider5" Width="250" VerticalAlignment="Center" MinHeight="0" Margin="20,0,0,0" Minimum="0" Maximum="20"  IsSnapToTickEnabled="True"/>
                <Label x:Name="label5" Content="{Binding Value, ElementName=slider5}" VerticalAlignment="Center" Margin="20,0,0,0" IsTabStop="True" />
            </StackPanel>


        </StackPanel>
        <Button Content="訂購" Margin="45,117,85,193" Grid.Column="2" Click="Button_Click" FontWeight="Bold" FontSize="20" Grid.RowSpan="2"/>
        <TextBlock x:Name="Result_TextBlock" TextWrapping="Wrap" Text="訂購清單" Grid.ColumnSpan="3" Margin="6,127,4,3" Background="#FFA1D4A8" Grid.Row="1"/>
        <GroupBox Header="內用/外帶" Margin="0,0,2,122" Grid.ColumnSpan="3" Background="#FFBF9999" FontSize="10" Width="778" Height="67" HorizontalAlignment="Right">
            <StackPanel Height="20" Orientation="Horizontal">
                <RadioButton Content="內用" FontSize="15" Margin="50,0,0,0"/>
                <RadioButton Content="外帶" FontSize="15" Margin="50,0,0,0"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
